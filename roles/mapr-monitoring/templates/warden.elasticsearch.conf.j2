services=elasticsearch:all:nfs
service.displayname=ES
service.command.start=/opt/mapr/elasticsearch/elasticsearch-2.3.3/etc/init.d/elasticsearch start
service.command.stop=/opt/mapr/elasticsearch/elasticsearch-2.3.3/etc/init.d/elasticsearch stop
service.command.monitorcommand=/opt/mapr/elasticsearch/elasticsearch-2.3.3/etc/init.d/elasticsearch status
service.command.type=BACKGROUND
service.baseservice=1
service.logs.location=/opt/mapr/elasticsearch/elasticsearch-2.3.3/var/log/elasticsearch
service.process.type=JAVA
service.alarm.tersename=naes
service.alarm.label=ESServerDown
